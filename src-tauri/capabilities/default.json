{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "opener:default",
    "dialog:allow-open",
    "store:allow-load",
    "store:allow-get",
    "store:allow-set",
    "store:allow-save",
    "core:window:allow-set-position",
    "core:window:allow-set-size",
    "fs:allow-read-text-file",
    "fs:allow-write-text-file",
    "fs:allow-exists",
    "fs:allow-remove",
    "fs:allow-rename"
  ]
}
