{
  "name": "book-creator",
  "version": "0.1.0",
  "description": "Book creator with Electron + SolidStart",
  "type": "module",
  "authors": [
    "Carl Becker (klequis)"
  ],
  "scripts": {
    "dev": "run-p dev:*",
    "dev:solid": "vinxi dev",
    "dev:electron": "wait-on http://localhost:3000 && electron . --no-sandbox",
    "build": "vinxi build",
    "start": "electron .",
    "test": "jest"
  },
  "pnpm": {
    "execConfig": {
      "shell": "/bin/bash -l"
    }
  },
  "main": "./electron/main.js",
  "license": "MIT",
  "dependencies": {
    "@codemirror/lang-javascript": "^6.2.4",
    "@codemirror/lang-markdown": "^6.5.0",
    "@codemirror/language-data": "^6.5.2",
    "@codemirror/state": "^6.5.2",
    "@codemirror/theme-one-dark": "^6.1.3",
    "@codemirror/view": "^6.38.8",
    "@corvu/resizable": "^0.2.5",
    "@solidjs/meta": "^0.29.4",
    "@solidjs/router": "^0.15.3",
    "@solidjs/start": "^1.2.0",
    "codemirror": "^6.0.2",
    "highlight.js": "^11.11.1",
    "lucide-solid": "^0.555.0",
    "markdown-it": "^14.1.0",
    "markdown-it-ast": "^0.0.1",
    "solid-js": "^1.9.3",
    "solid-markdown": "^2.1.1",
    "vinxi": "^0.5.8"
  },
  "devDependencies": {
    "@jest/globals": "^30.2.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.10.2",
    "electron": "^33.2.0",
    "jest": "^30.2.0",
    "npm-run-all": "^4.1.5",
    "ts-jest": "^29.4.6",
    "typescript": "~5.6.2",
    "vite": "^6.0.3",
    "vite-plugin-solid": "^2.11.0",
    "wait-on": "^8.0.1"
  }
}
